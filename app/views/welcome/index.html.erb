<h1>welcome index</h1>

<div id="masonry-container" class="transitions-enabled clearfix has-gutters">

<% cols = [2, 3, 3, 3, 5] %>

  <% @photos.shuffle.each do |photo| %>

    <a class="frame col<%= cols.sample %>" href="/photos/<%= photo.id %>">
      <img class="box picture" src="<%= photo.photo_url %>">
    </a>

  <% end %>
  </div>
</div>
