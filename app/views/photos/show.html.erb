<img class="full-pic" src="<%= @photo.photo_url %>" alt="">

<div class="photo-stats">
  <h3><%= @photo.title %></h3>
  <% if @photo.owner %>
    <h3>by <%= @photo.owner %></h3>
  <% end %>


  <% if Camera.find_by(:name => @photo.camera_model) %>
    <h3>Taken with a <%= link_to @camera.name, camera_path(@camera) %></h3>
    <img src="<%= @camera.large_image_url %>" alt="">
  <% else %>
    <h3>Taken with a <%= @photo.camera_model %></h3>
  <% end %>


  <p>Lens: <%= @photo.lens %></p>
  <p>Focal length: <%= @photo.focal_length %></p>
  <p>Exposure: <%= @photo.exposure_time %></p>
  <p>Aperture: <%= @photo.aperture %></p>
  <p>ISO Speed: <%= @photo.iso_speed %></p>
  <p>Categories: <%= @photo.category %></p>
  <p><%= link_to "See this photo on Flickr!", "#{@photo.photopage}" %></p>
</div>
